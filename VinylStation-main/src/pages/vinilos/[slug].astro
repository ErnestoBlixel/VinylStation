import MainLayout from "../../layouts/MainLayout.astro";
import { getSiteInfo, getViniloBySlug, getTodosLosVinilos } from "../../lib/wordpress.js";

// ESTRATEGIA H√çBRIDA: Generar solo TOP 500 vinilos est√°ticos
export async function getStaticPaths() {
  console.log('üéØ ESTRATEGIA H√çBRIDA: Generando p√°ginas est√°ticas para TOP 500 vinilos...');
  
  try {
    // Usar la funci√≥n que ya existe en wordpress.js
    const todosLosVinilosData = await getTodosLosVinilos();
    
    if (!todosLosVinilosData || !todosLosVinilosData.vinilos) {
      console.error('‚ùå No se pudieron cargar los vinilos para getStaticPaths');
      return [];
    }

    console.log(`üìä Total vinilos disponibles: ${todosLosVinilosData.vinilos.length}`);

    // üî• L√çMITE: Solo generar los primeros 500 vinilos (m√°s recientes/populares)
    const LIMITE_ESTATICOS = 500;
    const vinilosParaGenerar = todosLosVinilosData.vinilos.slice(0, LIMITE_ESTATICOS);
    
    console.log(`‚úÖ Generando ${vinilosParaGenerar.length} p√°ginas EST√ÅTICAS (de ${todosLosVinilosData.vinilos.length} totales)`);
    console.log(`üìÑ Resto (${todosLosVinilosData.vinilos.length - vinilosParaGenerar.length}) se cargar√°n DIN√ÅMICAMENTE`);

    // Generar una p√°gina est√°tica solo para los TOP vinilos
    const staticPaths = vinilosParaGenerar.map(vinilo => ({
      params: { slug: vinilo.slug }
    }));
    
    console.log(`üöÄ BUILD OPTIMIZADO: ${staticPaths.length} p√°ginas est√°ticas`);
    console.log(`üìÄ Ejemplos est√°ticos: ${staticPaths.slice(0, 3).map(p => p.params.slug).join(', ')}...`);
    
    return staticPaths;
    
  } catch (error) {
    console.error('üí• Error en getStaticPaths de vinilos:', error);
    // Fallback: generar solo los 2 de ejemplo si hay error
    console.log('üîÑ Usando fallback: solo 2 vinilos de ejemplo');
    return [
      { params: { slug: 'apostrophe' }},
      { params: { slug: 'dark-side-moon' }},
    ];
  }
}

const { slug } = Astro.params;

// üîß DEBUG: Log del slug recibido
console.log(`üéØ [DEBUG] Procesando vinilo con slug: "${slug}"`);

// üîß VALIDACI√ìN: Si el slug es un n√∫mero, redirigir a la paginaci√≥n
if (slug && /^\d+$/.test(slug)) {
  console.log(`üîÑ Slug num√©rico detectado: ${slug}, redirigiendo a /vinilos/page/${slug}/`);
  return Astro.redirect(`/vinilos/page/${slug}/`, 301);
}

const siteInfo = await getSiteInfo();
console.log(`üîç [DEBUG] Buscando vinilo "${slug}" en WordPress...`);
const data = await getViniloBySlug(slug);

if (!data) {
  console.error(`‚ùå [DEBUG] No se encontr√≥ vinilo "${slug}" en WordPress`);
  console.error(`‚ùå [DEBUG] getViniloBySlug devolvi√≥:`, data);
  return Astro.redirect("/404");
}

console.log(`‚úÖ [DEBUG] Vinilo "${slug}" encontrado:`, data.title);

const imagenVinilo =
  data.imagenPrincipalUrl ||
  data.imagenPrincipal?.sourceUrl ||
  data.featuredImage?.node?.sourceUrl ||
  "/images/placeholder-vinyl.jpg";

const altImagen =
  data.imagenPrincipal?.altText ||
  data.featuredImage?.node?.altText ||
  data.title;

const pageTitle = data.seo?.title || `${data.title} - VinylStation`;
const pageDescription =
  data.seo?.metaDesc ||
  data.excerpt ||
  `Descubre "${data.title}" en VinylStation.`;
