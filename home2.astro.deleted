    <!-- Secci√≥n extra con scroll progress -->
    <div class="scroll-progress-bar" id="scrollProgress"></div>
  </div>
</MainLayout>

<!-- Magic UI Animations Script -->
<script>
  // Magic UI Animation Implementation
  class MagicUIAnimations {
    constructor() {
      this.init();
    }
    
    init() {
      this.setupIntersectionObserver();
      this.setupScrollProgress();
      this.setupTextAnimations();
      this.setupSpecialEffects();
      console.log('üé® Magic UI Animations initialized');
    }
    
    setupIntersectionObserver() {
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            const element = entry.target;
            const animationType = element.dataset.animate;
            const delay = parseFloat(element.dataset.delay || 0) * 1000;
            
            setTimeout(() => {
              this.triggerAnimation(element, animationType);
            }, delay);
          }
        });
      }, {
        threshold: 0.1,
        rootMargin: '-50px'
      });
      
      // Observar todos los elementos con animaciones
      document.querySelectorAll('[data-animate]').forEach(el => {
        observer.observe(el);
      });
    }
    
    triggerAnimation(element, type) {
      element.classList.add('magic-animated');
      
      switch(type) {
        case 'blur-fade':
          this.blurFade(element);
          break;
        case 'text-reveal':
          this.textReveal(element);
          break;
        case 'animated-gradient-text':
          this.animatedGradientText(element);
          break;
        case 'text-animate':
          this.textAnimate(element);
          break;
        case 'aurora-text':
          this.auroraText(element);
          break;
        case 'sparkles-text':
          this.sparklesText(element);
          break;
        case 'typing-animation':
          this.typingAnimation(element);
          break;
        case 'word-rotate':
          this.wordRotate(element);
          break;
        case 'box-reveal':
          this.boxReveal(element);
          break;
        case 'flip-text':
          this.flipText(element);
          break;
        case 'shimmer-button':
          this.shimmerButton(element);
          break;
        case 'shimmer-text':
          this.shimmerText(element);
          break;
      }
    }
    
    // Blur Fade Animation
    blurFade(element) {
      element.style.opacity = '0';
      element.style.filter = 'blur(6px)';
      element.style.transform = 'translateY(20px)';
      element.style.transition = 'all 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94)';
      
      requestAnimationFrame(() => {
        element.style.opacity = '1';
        element.style.filter = 'blur(0px)';
        element.style.transform = 'translateY(0)';
      });
    }
    
    // Text Reveal Animation
    textReveal(element) {
      const text = element.textContent;
      const words = text.split(' ');
      
      element.innerHTML = words.map((word, index) => 
        `<span class="word-reveal" style="opacity: 0.3; transition: opacity 0.3s ease ${index * 0.1}s">${word}</span>`
      ).join(' ');
      
      setTimeout(() => {
        element.querySelectorAll('.word-reveal').forEach(span => {
          span.style.opacity = '1';
        });
      }, 100);
    }
    
    // Animated Gradient Text
    animatedGradientText(element) {
      element.style.background = 'linear-gradient(90deg, #c5ad7b, #ff6b6b, #c5ad7b)';
      element.style.backgroundSize = '200% 100%';
      element.style.webkitBackgroundClip = 'text';
      element.style.webkitTextFillColor = 'transparent';
      element.style.animation = 'gradientAnimation 3s ease-in-out infinite';
    }
    
    // Text Animate
    textAnimate(element) {
      const animation = element.dataset.animation || 'blurInUp';
      const text = element.textContent;
      const characters = text.split('');
      
      element.innerHTML = characters.map((char, index) => 
        `<span class="char-animate" style="display: inline-block; opacity: 0; transform: translateY(20px); filter: blur(4px); transition: all 0.3s ease ${index * 0.05}s">${char === ' ' ? '&nbsp;' : char}</span>`
      ).join('');
      
      setTimeout(() => {
        element.querySelectorAll('.char-animate').forEach(span => {
          span.style.opacity = '1';
          span.style.transform = 'translateY(0)';
          span.style.filter = 'blur(0px)';
        });
      }, 100);
    }
    
    // Aurora Text
    auroraText(element) {
      element.style.background = 'linear-gradient(135deg, #c5ad7b, #ff6b6b, #4ecdc4, #c5ad7b)';
      element.style.backgroundSize = '300% 300%';
      element.style.webkitBackgroundClip = 'text';
      element.style.webkitTextFillColor = 'transparent';
      element.style.animation = 'auroraAnimation 4s ease-in-out infinite';
    }
    
    // Sparkles Text
    sparklesText(element) {
      element.style.position = 'relative';
      
      // Crear sparkles
      for (let i = 0; i < 5; i++) {
        const sparkle = document.createElement('span');
        sparkle.innerHTML = '‚ú®';
        sparkle.style.position = 'absolute';
        sparkle.style.left = Math.random() * 100 + '%';
        sparkle.style.top = Math.random() * 100 + '%';
        sparkle.style.fontSize = '12px';
        sparkle.style.animation = `sparkleAnimation 2s ease-in-out infinite ${Math.random() * 2}s`;
        sparkle.style.pointerEvents = 'none';
        element.appendChild(sparkle);
      }
    }
    
    // Typing Animation
    typingAnimation(element) {
      const text = element.textContent;
      element.textContent = '';
      
      let i = 0;
      const typeInterval = setInterval(() => {
        element.textContent += text[i];
        i++;
        if (i >= text.length) {
          clearInterval(typeInterval);
        }
      }, 50);
    }
    
    // Word Rotate
    wordRotate(element) {
      const words = JSON.parse(element.dataset.words || '["Default"]');
      let currentIndex = 0;
      
      element.style.overflow = 'hidden';
      element.style.height = '1.2em';
      
      setInterval(() => {
        element.style.transform = 'translateY(-20px)';
        element.style.opacity = '0';
        
        setTimeout(() => {
          currentIndex = (currentIndex + 1) % words.length;
          element.textContent = words[currentIndex];
          element.style.transform = 'translateY(0)';
          element.style.opacity = '1';
        }, 250);
      }, 2500);
    }
    
    // Box Reveal
    boxReveal(element) {
      const overlay = document.createElement('div');
      overlay.style.position = 'absolute';
      overlay.style.top = '0';
      overlay.style.left = '0';
      overlay.style.width = '100%';
      overlay.style.height = '100%';
      overlay.style.background = '#c5ad7b';
      overlay.style.zIndex = '10';
      overlay.style.transition = 'transform 0.8s ease';
      
      element.style.position = 'relative';
      element.appendChild(overlay);
      
      setTimeout(() => {
        overlay.style.transform = 'translateX(100%)';
      }, 100);
      
      setTimeout(() => {
        overlay.remove();
      }, 900);
    }
    
    // Flip Text
    flipText(element) {
      const text = element.textContent;
      const characters = text.split('');
      
      element.innerHTML = characters.map((char, index) => 
        `<span style="display: inline-block; transform: rotateX(-90deg); opacity: 0; transition: all 0.3s ease ${index * 0.1}s">${char === ' ' ? '&nbsp;' : char}</span>`
      ).join('');
      
      setTimeout(() => {
        element.querySelectorAll('span').forEach(span => {
          span.style.transform = 'rotateX(0deg)';
          span.style.opacity = '1';
        });
      }, 100);
    }
    
    // Shimmer Button
    shimmerButton(element) {
      element.style.position = 'relative';
      element.style.overflow = 'hidden';
      
      const shimmer = document.createElement('div');
      shimmer.style.position = 'absolute';
      shimmer.style.top = '0';
      shimmer.style.left = '-100%';
      shimmer.style.width = '100%';
      shimmer.style.height = '100%';
      shimmer.style.background = 'linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent)';
      shimmer.style.animation = 'shimmerAnimation 2s infinite';
      element.appendChild(shimmer);
    }
    
    // Shimmer Text
    shimmerText(element) {
      element.style.background = 'linear-gradient(90deg, transparent, rgba(255,255,255,0.4), transparent)';
      element.style.backgroundSize = '200% 100%';
      element.style.animation = 'shimmerTextAnimation 2s infinite';
    }
    
    // Scroll Progress
    setupScrollProgress() {
      const progressBar = document.getElementById('scrollProgress');
      if (!progressBar) return;
      
      window.addEventListener('scroll', () => {
        const scrollTop = window.pageYOffset;
        const docHeight = document.body.offsetHeight - window.innerHeight;
        const scrollPercent = (scrollTop / docHeight) * 100;
        
        progressBar.style.width = scrollPercent + '%';
      });
    }
    
    setupTextAnimations() {
      // Setup any additional text-specific animations
    }
    
    setupSpecialEffects() {
      // Setup any special effects that need custom handling
    }
  }
  
  // Initialize when DOM is ready
  document.addEventListener('DOMContentLoaded', function() {
    // Initialize Magic UI Animations
    new MagicUIAnimations();
    
    // Initialize existing functionality from original home
    const playButtons = document.querySelectorAll('.play-btn-grid');
    const newsCards = document.querySelectorAll('.news-card-slider');
    
    // === REPRODUCTOR DE RADIO SIMPLE (INDEX) ===
    class IndexRadioPlayer {
      constructor() {
        this.audio = document.getElementById('radio-audio-index');
        this.playPauseBtn = document.getElementById('play-pause-index');
        this.playIcon = document.getElementById('play-icon-index');
        this.pauseIcon = document.getElementById('pause-icon-index');
        this.statusText = document.getElementById('status-text-index');
        this.loadingIndicator = document.getElementById('loading-indicator-index');
        this.volumeToggle = document.getElementById('volume-toggle-index');
        this.volumeOnIcon = document.getElementById('volume-on-index');
        this.volumeOffIcon = document.getElementById('volume-off-index');
        this.volumeSlider = document.getElementById('volume-slider-index');
        
        this.isPlaying = false;
        this.isLoading = false;
        
        this.init();
      }
      
      init() {
        if (!this.audio) return;
        const streamUrl = this.audio.getAttribute('data-stream-url');
        this.audio.src = streamUrl;
        this.audio.volume = parseFloat(this.volumeSlider?.value || 0.7);
        
        this.bindEvents();
      }
      
      bindEvents() {
        // Play/Pause
        this.playPauseBtn?.addEventListener('click', () => this.togglePlayPause());
        
        // Volume
        this.volumeToggle?.addEventListener('click', () => this.toggleMute());
        this.volumeSlider?.addEventListener('input', (e) => this.updateVolume(e.target.value));
        
        // Audio events
        this.audio?.addEventListener('loadstart', () => this.setLoading(true));
        this.audio?.addEventListener('canplay', () => this.setLoading(false));
        this.audio?.addEventListener('play', () => this.setPlaying(true));
        this.audio?.addEventListener('pause', () => this.setPlaying(false));
        this.audio?.addEventListener('error', () => this.handleError());
        this.audio?.addEventListener('stalled', () => this.setLoading(true));
        this.audio?.addEventListener('waiting', () => this.setLoading(true));
        this.audio?.addEventListener('playing', () => this.setLoading(false));
      }
      
      togglePlayPause() {
        if (!this.audio) return;
        if (this.isPlaying) {
          this.audio.pause();
        } else {
          this.audio.play().catch(() => this.handleError());
        }
      }
      
      setPlaying(playing) {
        this.isPlaying = playing;
        
        if (playing) {
          if (this.playIcon) this.playIcon.style.display = 'none';
          if (this.pauseIcon) this.pauseIcon.style.display = 'block';
          if (this.statusText) this.statusText.textContent = 'üéµ En vivo';
          this.playPauseBtn?.classList.add('playing');
        } else {
          if (this.playIcon) this.playIcon.style.display = 'block';
          if (this.pauseIcon) this.pauseIcon.style.display = 'none';
          if (this.statusText) this.statusText.textContent = 'üéµ Radio en vivo';
          this.playPauseBtn?.classList.remove('playing');
        }
