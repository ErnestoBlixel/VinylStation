            })
          ) : (
            <div class="no-programs">
              <div class="no-programs-icon">üìª</div>
              <h3>No hay programas disponibles</h3>
              <p>Los programas aparecer√°n aqu√≠ cuando sean publicados en WordPress.</p>
            </div>
          )}
        </div>
      
        <div class="section-footer" data-animate="blur-fade" data-delay="1.2">
          <a href="/programas" class="btn primary-btn" data-animate="shimmer-button">Ver Todos los Programas</a>
        </div>
      </div>
    </section>
    
    <!-- Secci√≥n de Noticias con animaciones din√°micas -->
    <section class="news-section">
      <div class="container">
        <!-- Header con Word Rotate -->
        <div class="section-header">
          <h2 data-animate="word-rotate" data-words='["√öltimas Noticias", "Novedades del Vinilo", "Actualizaciones", "Lo M√°s Reciente"]'>
            √öltimas Noticias
          </h2>
          <p data-animate="text-animate" data-animation="fadeIn" data-delay="0.5">
