                      <button class="play-btn-grid">‚ñ∂Ô∏è</button>
                    </div>
                  </div>
                  <div class="program-title-grid">
                    <h3 data-animate="text-animate" data-animation="slideUp">{programa.title}</h3>
                  </div>
                </div>
