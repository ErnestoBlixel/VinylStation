---
// P√°gina de inicio MEJORADA con Magic UI Animations
import MainLayout from '../layouts/MainLayout.astro';
import { getSiteInfo, getPageData, getProgramas, getNoticiasPaginadas } from '../lib/wordpress';

// Helper para convertir "<p>Hola</p>" ‚Üí "Hola"
const stripHtml = (html) => {
  if (!html) return '';
  return html.replace(/<[^>]*>/g, '').trim();
};

// Variables para controlar errores
let hasError = false;
let errorMessage = '';
let siteInfo = null;
let pageData = null;
let programasData = null;
let noticiasData = null;

try {
  // Obtener informaci√≥n del sitio
  siteInfo = await getSiteInfo();
  // Obtener datos de la p√°gina home
  pageData = await getPageData('home');
  // Obtener todos los programas para el grid
  programasData = await getProgramas({ limit: 50 });
  // Obtener noticias recientes para el slider
  noticiasData = await getNoticiasPaginadas({ page: 1, itemsPerPage: 12 });
  // Verificar que tenemos los datos m√≠nimos necesarios
  if (!siteInfo || !siteInfo.title) throw new Error('No se pudo obtener el t√≠tulo del sitio desde WordPress');
  if (!siteInfo.description) throw new Error('No se pudo obtener la descripci√≥n del sitio desde WordPress');
} catch (error) {
  hasError = true;
  errorMessage = `Error conectando con WordPress: ${error.message}`;
}

// Obtener programas y noticias del resultado
const programas = hasError ? [] : (programasData?.programas || []);
const noticias = hasError ? [] : (noticiasData?.noticias || []);

// Helper para formatear fecha
const formatDate = (dateString) => {
  if (!dateString) return '';
  const date = new Date(dateString);
  return date.toLocaleDateString('es-ES', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
};

// Estas variables SIEMPRE existen
const heroTitle = hasError ? null : (siteInfo?.title || pageData?.title);
const heroDescription = hasError ? null : (siteInfo?.description || pageData?.excerpt);
const logoImage = hasError ? null : (siteInfo?.logo?.url || pageData?.featuredImage?.url || '');
const logoAlt = hasError ? '' : (siteInfo?.logo?.altText || pageData?.featuredImage?.altText || 'Logo');

// SEO usando datos reales
const pageTitle = hasError ? 'Error - VinylStation' : (pageData?.seo?.title || `${siteInfo?.title} - Nueva Experiencia`);
const pageDescription = hasError ? 'Error cargando contenido' : (pageData?.seo?.metaDesc || siteInfo?.description);
---

<MainLayout title={pageTitle} description={pageDescription}>
  <!-- Contenedor principal unificado -->
  <div class="main-content">
    <div class="container hero-container">
      {hasError ? (
        // Vista de ERROR
        <div class="error-container">
          <div class="error-icon">‚ö†Ô∏è</div>
          <h1 class="error-title">Error de Conexi√≥n</h1>
          <p class="error-message">{errorMessage}</p>
          <div class="error-details">
            <h3>Detalles t√©cnicos:</h3>
            <ul>
              <li>Verificar conexi√≥n a: https://cms.vinylstation.es/graphql</li>
              <li>Comprobar que WordPress est√© funcionando</li>
              <li>Revisar configuraci√≥n de GraphQL</li>
            </ul>
          </div>
          <div class="error-actions">
            <button onclick="window.location.reload()" class="btn primary-btn">
              üîÑ Reintentar
            </button>
          </div>
        </div>
      ) : (
        // Vista NORMAL con datos reales y ANIMACIONES
        <header class="page-header">
          <!-- Logo con animaci√≥n Blur-fade -->
          {true && (
            <div class="site-icon-container" data-animate="blur-fade" data-delay="0">
              <img src="/images/logos/logo vinylstation.png" alt="VinylStation Logo" class="site-icon" />
            </div>
          )}
          
          <!-- T√≠tulo principal con Text-reveal -->
          <div class="hero-title-container" data-animate="text-reveal">
            <h1>{heroTitle}</h1>
          </div>
          
          <!-- Descripci√≥n con gradiente animado -->
          <div class="hero-description" data-animate="animated-gradient-text" data-delay="0.5">
            <p class="page-description">{heroDescription}</p>
          </div>
          
          <!-- Reproductor con animaci√≥n especial -->
          <div class="radio-player-widget" data-animate="sparkles-text" data-delay="0.8">
            <div class="radio-player-minimal">
              <audio id="radio-audio-index" preload="none" data-stream-url="https://stream.zeno.fm/4g7qxnxrloluv"></audio>
              
