<!-- Script para el grid de programas, slider de noticias y reproductor de radio -->
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const playButtons = document.querySelectorAll('.play-btn-grid');
    const newsCards = document.querySelectorAll('.news-card-slider');
    
    // === REPRODUCTOR DE RADIO SIMPLE (INDEX) - Solo desktop ===
    class IndexRadioPlayer {
      constructor() {
        // Solo inicializar si estamos en desktop
        if (window.innerWidth < 768) return;
        
        this.audio = document.getElementById('radio-audio-index');
        this.playPauseBtn = document.getElementById('play-pause-index');
        this.playIcon = document.getElementById('play-icon-index');
        this.pauseIcon = document.getElementById('pause-icon-index');
        this.statusText = document.getElementById('status-text-index');
        this.loadingIndicator = document.getElementById('loading-indicator-index');
        this.volumeToggle = document.getElementById('volume-toggle-index');
        this.volumeOnIcon = document.getElementById('volume-on-index');
        this.volumeOffIcon = document.getElementById('volume-off-index');
        this.volumeSlider = document.getElementById('volume-slider-index');
        
        this.isPlaying = false;
        this.isLoading = false;
        
        this.init();
      }
      
      init() {
        if (!this.audio) return;
        const streamUrl = this.audio.getAttribute('data-stream-url');
        this.audio.src = streamUrl;
        this.audio.volume = parseFloat(this.volumeSlider?.value || 0.7);
        
        this.bindEvents();
      }
      
      bindEvents() {
        // Play/Pause
        this.playPauseBtn?.addEventListener('click', () => this.togglePlayPause());
        
        // Volume
        this.volumeToggle?.addEventListener('click', () => this.toggleMute());
        this.volumeSlider?.addEventListener('input', (e) => this.updateVolume(e.target.value));
        
        // Audio events
        this.audio?.addEventListener('loadstart', () => this.setLoading(true));
        this.audio?.addEventListener('canplay', () => this.setLoading(false));
        this.audio?.addEventListener('play', () => this.setPlaying(true));
        this.audio?.addEventListener('pause', () => this.setPlaying(false));
        this.audio?.addEventListener('error', () => this.handleError());
        this.audio?.addEventListener('stalled', () => this.setLoading(true));
        this.audio?.addEventListener('waiting', () => this.setLoading(true));
        this.audio?.addEventListener('playing', () => this.setLoading(false));
      }
      
      togglePlayPause() {
        if (!this.audio) return;
        if (this.isPlaying) {
          this.audio.pause();
        } else {
          this.audio.play().catch(() => this.handleError());
        }
      }
      
      setPlaying(playing) {
        this.isPlaying = playing;
        
        if (playing) {
          if (this.playIcon) this.playIcon.style.display = 'none';
          if (this.pauseIcon) this.pauseIcon.style.display = 'block';
          if (this.statusText) this.statusText.textContent = 'En vivo';
          this.playPauseBtn?.classList.add('playing');
        } else {
          if (this.playIcon) this.playIcon.style.display = 'block';
          if (this.pauseIcon) this.pauseIcon.style.display = 'none';
          if (this.statusText) this.statusText.textContent = 'Radio en vivo';
          this.playPauseBtn?.classList.remove('playing');
        }
      }
      
      setLoading(loading) {
        this.isLoading = loading;
        
        if (loading) {
          if (this.loadingIndicator) this.loadingIndicator.style.display = 'block';
          if (this.statusText) this.statusText.textContent = 'Conectando...';
        } else {
          if (this.loadingIndicator) this.loadingIndicator.style.display = 'none';
          if (this.isPlaying && this.statusText) {
            this.statusText.textContent = 'En vivo';
          }
        }
      }
      
      toggleMute() {
        if (!this.audio) return;
        this.audio.muted = !this.audio.muted;
        
        if (this.audio.muted) {
          if (this.volumeOnIcon) this.volumeOnIcon.style.display = 'none';
          if (this.volumeOffIcon) this.volumeOffIcon.style.display = 'block';
        } else {
          if (this.volumeOnIcon) this.volumeOnIcon.style.display = 'block';
          if (this.volumeOffIcon) this.volumeOffIcon.style.display = 'none';
        }
      }
      
      updateVolume(value) {
        if (!this.audio) return;
        this.audio.volume = parseFloat(value);
        this.audio.muted = value == 0;
        
        if (value == 0) {
          if (this.volumeOnIcon) this.volumeOnIcon.style.display = 'none';
          if (this.volumeOffIcon) this.volumeOffIcon.style.display = 'block';
        } else {
          if (this.volumeOnIcon) this.volumeOnIcon.style.display = 'block';
          if (this.volumeOffIcon) this.volumeOffIcon.style.display = 'none';
        }
      }
      
      handleError() {
        this.setLoading(false);
        this.setPlaying(false);
        if (this.statusText) this.statusText.textContent = 'Error de conexi√≥n';
        
        // Reintentar despu√©s de 3 segundos
        setTimeout(() => {
          if (this.statusText) this.statusText.textContent = 'Radio en vivo';
        }, 3000);
      }
    }
    
    // Inicializar reproductor desktop
    new IndexRadioPlayer();
    
    // === PROGRAMAS ===
    // Click en play buttons de programas
    playButtons.forEach((playBtn, index) => {
      playBtn.addEventListener('click', (e) => {
        e.stopPropagation();
        
        // Animaci√≥n del bot√≥n
        playBtn.style.transform = 'scale(0.8) rotate(15deg)';
        setTimeout(() => {
          playBtn.style.transform = '';
        }, 200);
        
        // Obtener t√≠tulo del programa
        const card = playBtn.closest('.program-card-grid');
        const title = card.querySelector('.program-title-grid h3')?.textContent;
        
        console.log(`üéµ Reproduciendo programa: ${title}`);
      });
    });
    
    // === SLIDER DE NOTICIAS ===
    const newsSlider = document.getElementById('newsSlider');
    const newsPrevBtn = document.getElementById('newsPrevBtn');
    const newsNextBtn = document.getElementById('newsNextBtn');
    const newsDotsContainer = document.getElementById('newsSliderDots');
    
    if (newsSlider && newsPrevBtn && newsNextBtn && newsDotsContainer) {
      const newsSlides = newsSlider.querySelectorAll('.news-card-slider');
      const totalSlides = newsSlides.length;
      
      // Si no hay noticias, ocultar controles
      if (totalSlides === 0) {
        newsPrevBtn.style.display = 'none';
        newsNextBtn.style.display = 'none';
        newsDotsContainer.style.display = 'none';
        console.log('üì∞ No hay noticias disponibles - controles ocultos');
        return;
      }
      
      let currentSlide = 0;
      let isTransitioning = false;
      let autoSlideInterval;
      
      console.log(`üì∞ Slider de noticias iniciado con ${totalSlides} noticias`);
      
      // Configuraci√≥n responsive
      function getVisibleSlides() {
        const containerWidth = newsSlider.parentElement.offsetWidth;
        if (containerWidth >= 1200) return 4;
        if (containerWidth >= 992) return 3;
        if (containerWidth >= 768) return 2;
        return 1;
      }
      
      function getMaxSlide() {
        const visibleSlides = getVisibleSlides();
        return Math.max(0, totalSlides - visibleSlides);
      }
      
      // Crear dots
      function createDots() {
        newsDotsContainer.innerHTML = '';
        const maxSlides = getMaxSlide() + 1;
        
        // Solo crear dots si hay m√°s slides que los visibles
        if (maxSlides <= 1) {
          newsDotsContainer.style.display = 'none';
          return;
        }
        
        newsDotsContainer.style.display = 'flex';
        const step = Math.max(1, Math.floor(maxSlides / 8)); // M√°ximo 8 dots
        
        for (let i = 0; i < maxSlides; i += step) {
          const dot = document.createElement('div');
          dot.className = `dot ${i === 0 ? 'active' : ''}`;
          dot.setAttribute('data-slide', i);
          dot.addEventListener('click', () => goToSlide(i));
          dot.title = `Noticia ${i + 1}`;
          newsDotsContainer.appendChild(dot);
        }
      }
      
      // Actualizar dots
      function updateDots() {
        const dots = newsDotsContainer.querySelectorAll('.dot');
        dots.forEach(dot => {
          const slideIndex = parseInt(dot.getAttribute('data-slide'));
          dot.classList.toggle('active', Math.abs(slideIndex - currentSlide) < 2);
        });
      }
      
      // Actualizar botones
      function updateButtons() {
        const maxSlide = getMaxSlide();
        
        if (maxSlide <= 0) {
          newsPrevBtn.style.display = 'none';
          newsNextBtn.style.display = 'none';
          return;
        }
        
        newsPrevBtn.style.display = 'flex';
        newsNextBtn.style.display = 'flex';
        
        newsPrevBtn.disabled = currentSlide <= 0;
        newsNextBtn.disabled = currentSlide >= maxSlide;
        
        newsPrevBtn.style.opacity = currentSlide <= 0 ? '0.5' : '1';
        newsNextBtn.style.opacity = currentSlide >= maxSlide ? '0.5' : '1';
      }
      
      // Ir a slide espec√≠fico
      function goToSlide(slideIndex, smooth = true) {
        if (isTransitioning || totalSlides === 0) return;
        
        const maxSlide = getMaxSlide();
        currentSlide = Math.max(0, Math.min(slideIndex, maxSlide));
        
        const slideWidth = newsSlides[0].offsetWidth;
        const gap = 24; // 1.5rem
        const translateX = currentSlide * (slideWidth + gap);
        
        if (smooth) {
          isTransitioning = true;
          setTimeout(() => {
            isTransitioning = false;
          }, 600);
        }
        
        newsSlider.style.transform = `translateX(-${translateX}px)`;
        
        updateDots();
        updateButtons();
      }
      
      // Navegar slides
      function nextSlide() {
        const maxSlide = getMaxSlide();
        if (currentSlide >= maxSlide) {
          goToSlide(0); // Loop al inicio
        } else {
          goToSlide(currentSlide + 1);
        }
      }
      
      function prevSlide() {
        const maxSlide = getMaxSlide();
        if (currentSlide <= 0) {
          goToSlide(maxSlide); // Loop al final
        } else {
          goToSlide(currentSlide - 1);
        }
      }
      
      // Event listeners
      newsNextBtn.addEventListener('click', nextSlide);
      newsPrevBtn.addEventListener('click', prevSlide);
      
      // Auto-slide
      function startAutoSlide() {
        if (totalSlides <= getVisibleSlides()) return;
        autoSlideInterval = setInterval(nextSlide, 3000); // Cada 3 segundos
      }
      
      function stopAutoSlide() {
        if (autoSlideInterval) {
          clearInterval(autoSlideInterval);
          autoSlideInterval = null;
        }
      }
      
      // Control de auto-slide con hover
      newsSlider.addEventListener('mouseenter', stopAutoSlide);
      newsSlider.addEventListener('mouseleave', startAutoSlide);
      
      // Responsive
      let resizeTimeout;
      window.addEventListener('resize', () => {
        clearTimeout(resizeTimeout);
        resizeTimeout = setTimeout(() => {
          goToSlide(currentSlide, false);
          createDots();
        }, 150);
      });
      
      // Touch/swipe support
      let touchStartX = 0;
      let isDragging = false;
      
      newsSlider.addEventListener('touchstart', (e) => {
        touchStartX = e.touches[0].clientX;
        isDragging = true;
        stopAutoSlide();
      }, { passive: true });
      
      newsSlider.addEventListener('touchend', (e) => {
        if (!isDragging) return;
        isDragging = false;
        
        const touchEndX = e.changedTouches[0].clientX;
        const diffX = touchStartX - touchEndX;
        
        if (Math.abs(diffX) > 50) {
          if (diffX > 0) {
            nextSlide();
          } else {
            prevSlide();
          }
        }
        
        startAutoSlide();
      }, { passive: true });
      
      // Click en noticias
      newsCards.forEach((card) => {
        card.addEventListener('click', (e) => {
          if (!e.target.classList.contains('news-link')) {
            const link = card.querySelector('.news-link');
            if (link) {
              window.location.href = link.href;
            }
          }
        });
      });
      
      // Inicializaci√≥n
      createDots();
      updateButtons();
      goToSlide(0, false);
      startAutoSlide();
      
      console.log(`‚úÖ Slider de noticias inicializado: ${totalSlides} noticias`);
    }
    
    console.log(`‚úÖ P√°gina inicializada: ${playButtons.length} programas, ${newsCards.length} noticias`);
  });
</script>

