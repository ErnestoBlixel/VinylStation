                                  '/images/placeholder-radio.jpg';
                    
                    return (
                      <div class="program-card" key={`programa-${index}`}>
                        <div class="program-image">
                          <img 
                            src={imagen} 
                            alt={programa.title}
                            onerror="this.src='/images/placeholder-radio.jpg'"
                          />
                          <div class="program-overlay">
