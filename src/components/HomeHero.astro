---
// HomeHero.astro
import { getSiteInfo } from '../lib/wordpress';
const siteInfo = await getSiteInfo();
const title = siteInfo?.title || 'Vinyl Station Radio';
const description =
  siteInfo?.description ||
  "Emisora online dedicada a la diversidad musical, el talento emergente y la cultura del vinilo.";
---

<section class="home-hero">
  <div id="particles-js" class="particles-container"></div>

  <div class="hero-content">
    <img src="/images/logos/logo vinylstation.png" alt="VinylStation Logo" class="hero-main-logo" />
    <h1>{title}</h1>
    <p>{description}</p>
    <div class="cta-buttons">
      <button id="listen-live-btn" class="btn primary-btn">Escuchar en vivo</button>
    </div>
  </div>
</section>

<!-- Particles.js -->
<script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js" is:inline></script>
<script is:inline>
  document.addEventListener('DOMContentLoaded', function() {
    particlesJS('particles-js', {
      particles: {
        number: { value: 32, density: { enable: true, value_area: 600 } },
        color: { value: "#ffffff" }, // Blancas
        shape: {
          type: "circle",
        },
        opacity: {
          value: 0.17,
          random: true,
        },
        size: {
          value: 26,
          random: { enable: true, minimumValue: 12 }
        },
        line_linked: { enable: false }, // No líneas
        move: {
          enable: true,
          speed: 1.4,
          direction: "none",
          random: true,
          straight: false,
          out_mode: "out",
          bounce: false
        }
      },
      interactivity: {
        detect_on: "canvas",
        events: {
          onhover: { enable: true, mode: "repulse" },
          onclick: { enable: false }
        }
      },
      retina_detect: true
    });
    // Extra: play automático
    document.getElementById('listen-live-btn').addEventListener('click', function() {
      const audioPlayer = document.getElementById('radio-stream');
      if (audioPlayer) audioPlayer.play().catch(() => {});
    });
  });
</script>

<style>
.home-hero {
  position: relative;
  padding: 8rem 2rem;
  text-align: center;
  background: linear-gradient(135deg, #1a1a1a 0%, #232323 100%);
  overflow: hidden;
  min-height: 500px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.particles-container {
  position: absolute;
  top: 0; left: 0; width: 100%; height: 100%;
  z-index: 1; /* Debajo del hero-content */
  pointer-events: none;
}
.hero-content {
  position: relative;
  z-index: 2;
}
/* Logo principal del hero con animación */
.hero-main-logo {
  width: 100px;
  height: 100px;
  object-fit: contain;
  margin-bottom: 2rem;
  filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.3));
  transition: all 0.3s ease;
  animation: logoGlow 3s ease-in-out infinite alternate;
}

.hero-main-logo:hover {
  transform: scale(1.05);
}

/* Animación sutil de resplandor */
@keyframes logoGlow {
  0% {
    filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.3)) drop-shadow(0 0 10px rgba(255, 255, 255, 0.1));
  }
  100% {
    filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.3)) drop-shadow(0 0 20px rgba(255, 255, 255, 0.3));
  }
}

/* Tamaños responsivos mejorados */
@media (min-width: 768px) {
  .home-hero {
    padding: 9rem 2rem;
    min-height: 600px;
  }
  
  .hero-main-logo {
    width: 140px;
    height: 140px;
    margin-bottom: 2.5rem;
  }
}

@media (max-width: 768px) {
  .home-hero {
    padding: 6rem 1.5rem;
    min-height: 450px;
  }
  
  .hero-main-logo {
    width: 90px;
    height: 90px;
    margin-bottom: 1.5rem;
  }
}

@media (max-width: 576px) {
  .home-hero {
    padding: 5rem 1rem;
    min-height: 400px;
  }
  
  .hero-main-logo {
    width: 80px;
    height: 80px;
    margin-bottom: 1.2rem;
  }
}

@media (max-width: 480px) {
  .home-hero {
    padding: 4rem 1rem;
    min-height: 350px;
  }
  
  .hero-main-logo {
    width: 70px;
    height: 70px;
    margin-bottom: 1rem;
  }
}
