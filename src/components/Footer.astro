<style>
  .footer {
    background: var(--color-bg);
    border-top: 1px solid rgba(197, 173, 123, 0.15);
    margin-top: auto;
    color: var(--color-text);
  }
  
  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }
  
  .footer-main {
    padding: 2rem 0;
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }
  
  .footer-brand {
    border-bottom: 1px solid rgba(197, 173, 123, 0.1);
    padding-bottom: 1rem;
  }
  
  .brand-content {
    display: flex;
    align-items: center;
    gap: 0.8rem;
  }
  
  .footer-logo {
    width: 35px;
    height: 35px;
    object-fit: contain;
    filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.3));
  }
  
  [data-theme="day"] .footer-logo {
    filter: drop-shadow(0 2px 4px rgba(5, 2, 31, 0.3));
  }
  
  .brand-text h3 {
    color: var(--title-color);
    font-size: 1rem;
    margin: 0;
    font-weight: 700;
    letter-spacing: 0.5px;
  }
  
  .brand-text p {
    color: var(--color-text-secondary);
    font-size: 0.7rem;
    margin: 0;
    font-weight: 500;
    letter-spacing: 0.3px;
  }
  
  /* Layout móvil - 2 columnas */
  .footer-links {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
  }
  
  .footer-section h4 {
    color: var(--title-color);
    font-size: 0.8rem;
    margin-bottom: 0.8rem;
    font-weight: 600;
    letter-spacing: 0.5px;
  }
  
  .footer-section ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .footer-section li {
    margin-bottom: 0.4rem;
  }
  
  .footer-section a {
    color: var(--color-text-secondary);
    text-decoration: none;
    font-size: 0.75rem;
    font-weight: 400;
    letter-spacing: 0.3px;
    transition: color 0.3s ease;
    text-transform: uppercase;
  }
  
  .footer-section a:hover {
    color: var(--title-color);
  }
  
  .footer-bottom {
    padding: 1.2rem 0;
    border-top: 1px solid rgba(197, 173, 123, 0.1);
    text-align: center;
  }
  
  .social-icons {
    display: flex;
    justify-content: center;
    gap: 0.8rem;
    margin-bottom: 0.8rem;
    flex-wrap: wrap;
  }
  
  .social-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 30px;
    height: 30px;
    background: transparent;
    border: 1px solid rgba(197, 173, 123, 0.3);
    border-radius: 50%;
    color: var(--color-text-secondary);
    text-decoration: none;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }
  
  .social-icon svg {
    width: 16px;
    height: 16px;
    color: var(--color-text-secondary);
    transition: all 0.3s ease;
    z-index: 2;
    position: relative;
  }
  
  .social-icon::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, var(--title-color), transparent);
    opacity: 0;
    transition: opacity 0.3s ease;
    z-index: 1;
  }
  
  .social-icon:hover {
    background: var(--title-color);
    border-color: var(--title-color);
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(197, 173, 123, 0.3);
  }
  
  .social-icon:hover::before {
    opacity: 0.1;
  }
  
  .social-icon:hover svg {
    color: var(--color-bg);
    transform: scale(1.1);
  }
  
  .footer-credits p {
    color: var(--color-text-secondary);
    font-size: 0.7rem;
    margin: 0;
    font-style: italic;
  }
  
  .studio-link {
    color: var(--title-color);
    text-decoration: none;
    transition: all 0.3s ease;
  }
  
  .studio-link:hover {
    color: var(--color-primary);
    text-decoration: underline;
  }
  
  /* Tablet y desktop */
  @media (min-width: 768px) {
    .footer-content {
      padding: 0 2rem;
    }
    
    .footer-main {
      grid-template-columns: 280px 1fr;
      gap: 3rem;
      align-items: start;
      padding: 2.5rem 0;
    }
    
    .footer-brand {
      border-bottom: none;
      border-right: 1px solid rgba(197, 173, 123, 0.1);
      padding-bottom: 0;
      padding-right: 2rem;
    }
    
    .footer-logo {
      width: 45px;
      height: 45px;
    }
    
    .brand-text h3 {
      font-size: 1.2rem;
    }
    
    .brand-text p {
      font-size: 0.8rem;
    }
    
    .footer-links {
      grid-template-columns: repeat(4, 1fr);
      gap: 2rem;
    }
    
    .footer-section h4 {
      font-size: 0.9rem;
      margin-bottom: 1rem;
    }
    
    .footer-section li {
      margin-bottom: 0.6rem;
    }
    
    .footer-section a {
      font-size: 0.85rem;
    }
    
    .footer-bottom {
      padding: 1.5rem 0;
    }
    
    .social-icons {
      gap: 1rem;
      margin-bottom: 1rem;
    }
    
    .social-icon {
      width: 35px;
      height: 35px;
    }
    
    .social-icon svg {
      width: 20px;
      height: 20px;
    }
    
    .footer-credits p {
      font-size: 0.8rem;
    }
  }
  
  @media (min-width: 1024px) {
    .footer-content {
      padding: 0 3rem;
    }
    
    .footer-main {
      padding: 3rem 0 2.5rem;
    }
    
    .footer-bottom {
      padding: 2rem 0;
    }
  }
  
  /* Móvil muy pequeño */
  @media (max-width: 480px) {
    .footer-content {
      padding: 0 0.8rem;
    }
    
    .footer-main {
      padding: 1.5rem 0;
      gap: 1.2rem;
    }
    
    .footer-links {
      gap: 1.2rem;
    }
    
    .footer-section h4 {
      font-size: 0.75rem;
      margin-bottom: 0.6rem;
    }
    
    .footer-section li {
      margin-bottom: 0.3rem;
    }
    
    .footer-section a {
      font-size: 0.7rem;
    }
    
    .footer-bottom {
      padding: 1rem 0;
    }
    
    .social-icons {
      gap: 0.6rem;
      margin-bottom: 0.6rem;
    }
    
    .social-icon {
      width: 28px;
      height: 28px;
    }
    
    .social-icon svg {
      width: 14px;
      height: 14px;
    }
    
    .footer-credits p {
      font-size: 0.65rem;
    }
  }
</style>