  margin-bottom: 0.5rem;
  font-size: 1.2rem;
}

.instruction-card p {
  color: var(--color-text-secondary);
  font-size: 0.9rem;
  line-height: 1.4;
}

.control-panel-mini {
  background: rgba(var(--color-bg-rgb), 0.9);
  border-radius: 10px;
  padding: 1.5rem;
  margin-bottom: 2rem;
  border: 1px solid rgba(255, 255, 255, 0.1);
}

.control-panel-mini h3 {
  color: var(--color-accent);
  margin-bottom: 1rem;
  font-size: 1.1rem;
}

.controls-mini {
  display: flex;
